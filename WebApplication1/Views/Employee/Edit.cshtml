@model WebApplication1.Models.EmployeeInfo
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" value="@Model.Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" value="@Model.Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Gender"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" value="@Model.Department" class="form-control" />
                <span asp-validation-for="Department"></span>
            </div>
            <div>
                <input type="submit" value="Edit" class="btn" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index">Back</a>
</div>